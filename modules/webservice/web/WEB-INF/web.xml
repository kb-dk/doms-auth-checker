    <context-param>
        <param-name>
            dk.statsbiblioteket.doms.authchecker.fedoralocation
        </param-name>
        <param-value>
            http://localhost:8080/fedora
        </param-value>
    </context-param>

    <context-param>
        <description>
            The time that issued tickets should live before being removed. Unit
            is milliseconds
        </description>
        <param-name>
            dk.statsbiblioteket.doms.authchecker.tickets.timeToLive
        </param-name>
        <param-value>
            1200000
        </param-value>
    </context-param>

    <context-param>
        <description>
            The time temp usernames should live before being garbage collected.
            Unit is milliseconds.
        </description>
        <param-name>
            dk.statsbiblioteket.doms.authchecker.users.timeToLive
        </param-name>
        <param-value>
            1200000
        </param-value>
    </context-param>



    <context-param>
        <description>The class that will be exposed for surveillance
        </description>
        <param-name>
            dk.statsbiblioteket.doms.domsutil.surveyable.surveyables
        </param-name>
        <param-value>
            dk.statsbiblioteket.doms.authchecker.AuthCheckerSurveyable
        </param-value>
    </context-param>

    <servlet>
        <servlet-name>AuthChecker</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>dk.statsbiblioteket.doms.authchecker</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthChecker</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Surveyable Service</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>dk.statsbiblioteket.doms.domsutil.surveyable
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Surveyable Service</servlet-name>
        <url-pattern>/surveyable/*</url-pattern>
    </servlet-mapping>

</web-app>
